{
	"extends": "airbnb",
	"env": {
		"node": true,
		"es6": true,
		"browser": true
	},
	"rules": {
		"indent": ["error", "tab"],
        "no-tabs": 0,
		"no-undef": 1,
		"no-unused-vars": 1,
		"space-in-parens": [2, "always"],
		"space-unary-ops": [
			2, {
				"words": false,
				"nonwords": true 
			}
		]
	},
	"globals": {
		"TimelineLite": false,
		"TweenMax": false,
		"wp": false
	}
}