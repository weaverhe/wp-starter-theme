// <form>, <label>, <input>, <select>, <textarea>

form
	max-width 700px
	margin 0 auto 50px
	overflow hidden

	@media screen and (min-width 900px)
		margin-bottom 100px


.input
	position relative
	z-index 1
	display inline-block
	padding 1em
	vertical-align top

	&.input--half
	&.input--whole
		width 100%


	@media screen and (min-width 600px)
		&.input--half
			width 50%
			float left
	


	

input[type="search"]
	box-sizing border-box

.input__field
	width 100%
	background-color $grey--lightest
	box-shadow 0px 0px 0px 2px transparent
	transition box-shadow 0.3s
	position relative
    display block
    float right
    padding 10px
    width 100%
    border none
    border-radius 0
    font-weight bold
    -webkit-appearance none

    &focus
    	box-shadow 0px 0px 0px 2px $main-cta
    	outline  0px
   

textarea
	min-height 150px

.input__label
	display inline-block
	padding-left 10px
    font-weight bold
    user-select none

.input__label-content
	padding 0.15em 0
	position relative
	display block
