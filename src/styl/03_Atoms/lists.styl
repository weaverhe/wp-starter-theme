ol
ul
	padding-left 1.5em

	li
		margin-bottom 5px

	ol
	ul
		margin 10px 0px


.list--unstyled
	list-style-type none
	padding-left 0px

.list--inline
	li
		display inline-block
		margin-right 10px

		&:last-child
			margin-right 0px
	


.list--icon
	margin-right 15px

	a
		color $color--text
		background-color $white
		width 30px
		text-align center
		padding 5px
		line-height 1
		display block
		transition background-color .2s ease-in-out, color .2s ease-in-out


.list__icon.list__icon--facebook
	a:hover
	a:active
	a:focus
		background-color #3b5998
		color $white


.list__icon.list__icon--linkedin
	a:hover
	a:active
	a:focus
		background-color #0077b5
		color $white


.list__icon.list__icon--twitter
	a:hover
	a:active
	a:focus
		background-color #1da1f2
		color $white


.list__icon.list__icon--yelp
	a:hover
	a:active
	a:focus
		background-color #af0606
		color $white
