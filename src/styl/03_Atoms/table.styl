table
	margin 10px

caption
	background-color $cta-main--dark
	color white
	font-size 1.618em
	font-weight 400
	padding 10px

thead
	background-color $cta-main

th
	color white
	padding 10px 25px
	font-weight 300
	text-align center

tbody
	tr:nth-child(even)
		background-color #eee


	tr
		border-bottom 1px solid #ddd


td
	border-right 1px solid #ddd
	text-align center
	padding 5px

	&:last-child
		border-right 0px

