/* WordPress Core Alignment Classes */
.alignnone
	margin 5px 20px 20px 0
	
.aligncenter
div.aligncenter
	display block
	margin 5px auto
	
.alignright
a img.alignright
	float right
	margin 5px 0 20px 20px
	
.alignleft
a img.alignleft
	float left
	margin 5px 20px 20px 0

a img.aligncenter
	display block
	margin-left auto
	margin-right auto

body.no-scroll
	overflow-y hidden

