.screen-reader-text
	overflow hidden
	position absolute

	height 1px
	width 1px

	white-space nowrap

	clip rect(1px, 1px, 1px, 1px)

	&:focus
		display block

		left 5px
		top 5px
		z-index 100000 /* Above WP toolbar. */

		height auto
		padding 15px 23px 14px
		width auto

		color $cta-main
		font-size 0.875rem
		font-weight bold
		line-height normal
		text-decoration none

		background-color $grey--lightest
		border-radius 3px
		box-shadow 0 0 2px 2px rgba(0, 0, 0, 0.6)
		clip auto