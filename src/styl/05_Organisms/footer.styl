footer
	background-color $color--text
	color $white
	padding-top 25px

	.full-logo--stacked
		width 195px

	.full-logo__title
		font-size 20px

	a
		color $white
		text-decoration none

	li
		margin-bottom 10px

	@media screen and (max-width 900px)
		.grid__item
			width 50%
			text-align center
			margin-bottom 25px

			&:first-child
				padding-left 10px

			&:last-child
				padding-right 10px

		.grid--dynamic-columns
			flex-wrap wrap

		.fa-ul
			margin-left 0

			i
				display none

		.full-logo--stacked
			margin 0 auto

	@media screen and (max-width 581px)
		.grid__item
			width 100%

.footer__title
	color $white
	font-size 1.563em
	margin-bottom 25px
	margin-top 0

.footer--secondary
	background-color $black
	padding 25px 0
	margin-top 25px

	p
		margin 0