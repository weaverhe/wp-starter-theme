.form--fancy
	max-width 700px
	
	.input
		overflow hidden
		display inline-block
		position relative
		z-index 1
		width calc(100% - 2em)
		padding-top 2em
		margin 1em
		vertical-align top
		
	.input--half

		@media screen and (min-width 600px) 
			float left
			width calc(50% - 2em)


	.input__field
		width 100%
		background transparent
		opacity 0
		padding 0.35em
		z-index 100
		border 0px
		position relative
		margin-bottom 0px
		font-size 1.3em
		line-height 1.6em

	.input--filled .input__field
	.input__field:focus	
		opacity 1
		cursor text
		transition opacity 0s 0.4s
		outline none


	.input__label
		width 100%
		bottom 0
		position absolute
		pointer-events none
		text-align left
		color $grey
		padding 0 0.5em
		display inline-block
		float right
		font-weight bold
		font-size .85em
		user-select none
		
		&:before
			content ''
			position absolute
			width 100%
			height 4em
			top 100%
			left 0
			background $grey--lightest
			border-top 4px solid $grey
			transform translate3d(0,-3px,0)
			transition transform .4s
			transition-timing-function cubic-bezier(0.7,0,0.3,1)
			
	.input__label-content
		position relative
		display block
		width 100%
		padding 0.5em 0
		transform-origin 0% 100%
		transition transform 0.4s, color 0.4s
		transition-timing-function cubic-bezier(0.7,0,0.3,1)

	.input--filled .input__label:before
	.input__field:focus + .input__label:before
		transition-delay 0.05s
		transform translate3d(0,-3.3em,0)

	.input--filled .input__label-content,
	.input__field:focus + .input__label .input__label-content
			color $grey--dark
			transform translate3d(0,-3.3em,0) scale3d(0.81,0.81,1)

	.input__label-content--required
		color $red

