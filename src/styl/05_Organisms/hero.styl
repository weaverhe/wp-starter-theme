.hero--purple-g
	color $white

	background-color $purple
	background $gradient--purple

	.text-link
		color $white

.hero__cta-container
	padding-bottom 50px

	p
		margin 0

		text-align center

	a.text-link
		display block

		margin-top 1em

		font-size $font--small

	@media screen and (max-width 900px)
		.button--large
			font-size 1.1em

// confetti
.hero--confetti
	position relative

	canvas
		position absolute

		top 0
		bottom 0
		left 0
		right 0

.hero--white
	display flex
	align-items center
	justify-content center

	min-height 350px

	padding-top 50px

	@media screen and (min-width 800px)
		min-height 450px

		padding-top 0

.hero--white__title
	display flex
	flex-direction column
	align-items center

	margin 0

.hero--white__title-big
.hero--white__title-small
	display inline-block

	text-align center

.hero--white__title-big
	position relative

	color $purple
	text-transform uppercase
	letter-spacing 0.25em
	line-height 1
	font-size 2.5rem

	background $white

	mix-blend-mode multiply

	@media screen and (min-width 450px)
		font-size 3.5rem
	
	@media screen and (min-width 650px)
		font-size 5.7rem

	@media screen and (min-width 901px)
		font-size 6.9rem

	&:before
		content ''
		display block
		position absolute
		top 0
		bottom 0
		right 0
		left 0

		background $gradient--purple
		mix-blend-mode screen

.hero--white__title-small
	margin 0
	margin-top 35px

	font-family $iconsolata
	font-size 1rem
	font-weight 400
	color $purple
	line-height 1.2

	@media screen and (min-width 601px)
		font-size 1.125rem

	@media screen and (min-width 901px)
		font-size 1.25rem

	@media screen and (min-width 1201px)
		font-size 1.3125rem