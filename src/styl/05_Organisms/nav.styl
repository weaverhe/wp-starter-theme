.nav--top
	position fixed
	top 0
	left 0
	right 0

	background-color $white

.admin-bar .nav--top
	top 32px

.nav__content
	display flex
	justify-content space-between
	align-items center

	height $nav-height

.nav__logo
	display block

.nav__menu
	display flex
	align-items center
	justify-content center
	flex-direction column

	position absolute
	top $nav-height
	right 0
	bottom 0
	left 0

	padding 0
	margin 0
	width 100%
	min-height 'calc(100vh - %s)' % $nav-height

	list-style-type none
	background-color $white

	transform translateX(-100%)
	transform-origin left center

	li
		padding 1vw 0

		opacity 0
		transform translateY(25px)

@media screen and (min-width 900px)
	.nav__mobile-link
		display none

	.nav__menu
		flex-direction row

		position relative
		top 0

		width auto
		min-height initial

		transform none

		li
			margin-left 2vw

			opacity 100
			transform none