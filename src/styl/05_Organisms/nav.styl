// main container, unexpanded
nav
	position fixed
	top 0
	left 0
	right 0
	z-index 100

	height 50px

	background-color $white
	border-bottom 1px solid $grey--lighter

	@media screen and (min-width 800px)
		bottom 0
		right initial

		width 60px
		height initial

		border-right 1px solid $grey--lighter
		border-bottom 0

// navicon/logo container
.navbar
	display flex
	justify-content space-between
	align-items center

	width 100%
	height 50px

	@media screen and (max-width 799px)
		position fixed
		top 0
		left 0
		right 0

		.nav__desktop-spacer
			display none

		.navbar-logo
			transform rotate(90deg) translateY(50%)
			max-width 22px
			height auto

	@media screen and (min-width 800px)
		position absolute
		top 0
		right 0
		left 0

		display flex
		flex-direction column
		justify-content space-between
		align-items center

		width 60px
		height 100%

.navbar__logo-link
	display flex
	justify-content center

// navicon
.navicon
	position relative

	margin-left 15px

	width 34px
	height 39px

	@media screen and (min-width 800px)
		margin-top 15px
		margin-left 0

	&:hover
		.navicon-lines
			opacity 1

			transition 0.5s
			
			&:before
				top -12px

			&:after
				bottom -12px

			&:before
			&:after
				transition 0.5s

.navicon-lines
	display block
	position absolute

	top 17px

	height 4px
	width 100%

	background-color $color--text
	border-radius 5px

	opacity 0.8

	&:before
	&:after
		position absolute

		width 100%
		height 4px

		content ''

		background-color $color--text
		border-radius 5px

	&:before
		top -10px

	&:after
		bottom -10px

.navicon--open
	.navicon-lines
		background transparent

		transition 0.25s

		&:before
			top 0

			transform rotate(-45deg)

		&:after
			bottom 0

			transform rotate(45deg)

		&:before
		&:after
			left 10%

			width 80%
	
	&:hover
		.navicon-lines
			&:before
				top 0

			&:after
				bottom 0

			&:before
			&:after
				left 0

				width 100%

// menu container styles
.nav__content
	display none
	align-items center
	justify-content center

	padding 75px 10px

	width 100%
	min-height 100%

	overflow-y auto
	
	ul
		margin 0
		padding 0

		list-style-type none

	@media screen and (min-width 800px)
		padding 0

		width calc(100% - 60px)

// text item styles
.nav-item--text
	margin-bottom 30px

	@media screen and (min-width 1440px)
		margin-bottom 40px

	a
		text-decoration none
		color $color--text
		font-family $work-sans
	
.nav-item__title
.nav-item__desc
	display block

.nav-item__title
	position relative
	z-index 110

	font-size 1.33em

	@media screen and (min-width 1440px)
		font-size 1.9em

.nav-item__highlight
	position absolute
	left -5px
	top 16px

	height 10px
	width 60px

	background-color $purple--bg

	transition 0.45s

	transform scale(0, 1)
	transform-origin bottom left

	@media screen and (min-width 1440px)
		top 26px

		height 13px

.nav-item__desc
	font-weight 300
	font-size 0.85em

	transition 0.3s 0.2s

	@media screen and (min-width 1440px)
		font-size 1em

	@media screen and (min-width 800px)
		opacity 0.1

.nav-item__arrow
	position relative
	display inline-block
	top -0.25em
	left 1em

	font-size 0.5em

	opacity 0

	transition 0.3s 0.2s
	transition-timing-function ease-out

	transform translateX(-2em)

.nav-item--text
	a:hover
	a:active
	a:focus
		.nav-item__desc
			opacity 1

		.nav-item__highlight
			transform scale(1, 1)

		.nav-item__arrow
			transform translateX(0)

			opacity 1


	

// social styles
.nav__content
	.sub-menu
		li
			display inline-block

			margin-right 10px

			&:last-child
				margin-right 0
		a
			color $color--text

			&:hover
			&:active
			&:focus
				i
					transform scale(1.1)

		i
			font-size 1.33em

			transition 0.25s

.nav-item--text,
.nav__content .sub-menu
	opacity 0

	transform translateY(100px)