.footer__social
	ul
		margin 0
		padding 0

		text-align center

		list-style-type none

	li
		display inline

		margin 0 $spacing--xs

	svg
		position relative
		top 15px

		height 20px
		width 20px

		*
			transition fill 0.2s ease-in

	a
		display inline-block

		height 50px
		width 50px

		background-color lighten( $color--text, 10% )
		border-radius 50%

		&:hover
		&:active
		&:focus
			background-color $white
			transition background-color 0.3s ease-in

			.icon-behance *
				fill $color--behance

			.icon-codepen *
				fill $color--codepen

